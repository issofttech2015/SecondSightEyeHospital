@model IEnumerable<SecondSightWeb.Areas.Inventory.Models.ViewModel.CategroyViewModel>

<script>
    $(document).ready(function () {
        $('#tbl_Categroy thead tr').clone(true).appendTo('#tbl_Categroy thead');
        $('#tbl_Categroy thead tr:eq(1) th').each(function (i) {
            var title = $(this).text().trim();
            if (title != "")
                $(this).html('<input type="text" placeholder="Search ' + title + '" />');

            $('input', this).on('keyup change', function () {
                if (table.column(i).search() !== this.value) {
                    table
                        .column(i)
                        .search(this.value)
                        .draw();
                }
            });
        });

        var table = $('#tbl_Categroy').DataTable({
            orderCellsTop: true,
            fixedHeader: true
        });
    });
</script>
<a href="@Url.Action("Create")" class="btn btn-danger"><span><i class="glyphicon glyphicon-plus"></i></span>Add Record</a>
<table class="table table-striped table-bordered" id="tbl_Categroy">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssetTag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReOrderLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaleingPrice)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssetTag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReOrderLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaleingPrice)
            </td>
            <td>
                <a href="@Url.Action("Edit",new { id=item.CategoryId})" class="btn btn-primary btn-xs"><i class="glyphicon glyphicon-pencil"></i></a>
                <a href="@Url.Action("Delete",new { id=item.CategoryId})" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
    }

</table>
