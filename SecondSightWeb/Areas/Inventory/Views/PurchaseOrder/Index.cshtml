    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PODate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreviewAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeneratedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeteratedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsRejected)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPurchased)
            </td>
