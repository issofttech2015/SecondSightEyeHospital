            <th>
                @Html.DisplayNameFor(model => model.GeteratedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRejected)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPurchased)
            </th>
            <th></th>
        </tr>
    </thead>
