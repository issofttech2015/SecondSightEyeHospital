@model IEnumerable<SecondSightWeb.Areas.Inventory.Models.ViewModel.PurchaseOrderViewModel>

<script>
    $(document).ready(function () {
        $('#tbl_PurchaseOrder').DataTable();
    });
</script>
<a href="@Url.Action("Create")" class="btn btn-danger"><span><i class="glyphicon glyphicon-plus"></i></span>Add Record</a>
<table class="table table-striped table-bordered" id="tbl_PurchaseOrder">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PODate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreviewAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseAmount)
