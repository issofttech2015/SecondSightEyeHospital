@model IEnumerable<SecondSightWeb.Areas.OtManager.Models.ViewModels.OtConfirmationViewModel>

@if (Session["Employee_Role"].ToString() == "Admin")
{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#tbl_OtSugesstion').DataTable();
        $('[data-toggle="confirmation"]').confirmation({
            placement: 'left'
        });
    });
</script>
@*<a href="@Url.Action("Create")" class="btn btn-danger"><span><i class="glyphicon glyphicon-plus"></i></span>Add Record</a>*@
<table class="table table-striped table-bordered" id="tbl_OtSugesstion">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReffredbyDoctorsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eye)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuggestedDoctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Operation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurgicalProcedure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OperationTime)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReffredbyDoctorsName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Eye)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SuggestedDoctor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Operation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SurgicalProcedure)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OperationTime)
                </td>
                <td>
                    <a href="@Url.Action("Edit",new { id=item.OperationSuggessitionId})" class="btn btn-default btn-xs" data-toggle="confirmation" data-btn-ok-label="Continue"><i class="glyphicon glyphicon-zoom-in"></i></a>
                    <a href="@Url.Action("Details",new { id=item.OperationSuggessitionId})" class="btn btn-primary btn-xs" data-toggle="confirmation" data-btn-ok-label="Continue"><i class="glyphicon glyphicon-ok"></i></a>
                    <a href="@Url.Action("Cancel",new { id=item.OperationSuggessitionId})" class="btn btn-danger btn-xs" data-toggle="confirmation" data-btn-ok-label="Cancel" data-btn-cancel-label="No"><i class="glyphicon glyphicon-remove"></i></a>
                    <a href="@Url.Action("Delete","OtConfirmation",new { id=item.OperationSuggessitionId})" class="btn btn-danger btn-xs" data-toggle="confirmation"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
