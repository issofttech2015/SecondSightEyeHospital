@model IEnumerable<SecondSightSouthendEyeCentre.Models.CheifComplainList>

@{
    ViewBag.Title = "Index";
}
<script>
    $(document).ready(function () {
        $('#tbl_CheifComplain').DataTable();
    });
</script>

<a href="@Url.Action("Create")" class="btn btn-danger"><span><i class="glyphicon glyphicon-plus"></i></span>Add Record</a>
<table class="table table-striped table-bordered" id="tbl_CheifComplain">
    <thead>
        <tr>
            <th>
                <label>Complain Name</label>
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompalainName)
                </td>
                <td>
                    <a href="@Url.Action("Edit",new { id=item.Id})" class="btn btn-primary btn-xs"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="@Url.Action("Delete",new { id=item.Id})" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
