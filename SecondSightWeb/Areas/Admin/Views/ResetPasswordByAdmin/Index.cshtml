@model IEnumerable<SecondSightWeb.Areas.Admin.Models.ViewModels.ResetPasswordViewModel>

@{
    ViewBag.Title = "Index";
}

<script>
    $(document).ready(function () {
        $('#tbl_ResetPassword thead tr').clone(true).appendTo('#tbl_ResetPassword thead');
        $('#tbl_ResetPassword thead tr:eq(1) th').each(function (i) {
            var title = $(this).text().trim();
            if (title != "") {
                $(this).html('<input type="text" placeholder="Search" />');
            }

            $('input', this).on('keyup change', function () {
                if (table.column(i).search() !== this.value) {
                    table
                        .column(i)
                        .search(this.value)
                        .draw();
                }
            });
        });

        var table = $('#tbl_ResetPassword').DataTable({
            //scrollX: true,
            scrollCollapse: true,
            autoWidth: true,
            paging: true,
        });

        $('[data-toggle="confirmation"]').confirmation({
            placement: 'left'
        });
    });
</script>
<table class="table table-striped table-bordered" id="tbl_ResetPassword">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestIP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestIP)
                </td>
                <td>
                    <a href="@Url.Action("Edit",new { id=item.EmployeeId})" class="btn btn-primary btn-xs" data-toggle="confirmation" data-btn-ok-label="Continue"><i class="glyphicon glyphicon-pencil"></i></a>
                    @*<a href="@Url.Action(" Delete",new { id=item.Id})" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-trash"></i></a>*@
                </td>
            </tr>
        }
    </tbody>
</table>