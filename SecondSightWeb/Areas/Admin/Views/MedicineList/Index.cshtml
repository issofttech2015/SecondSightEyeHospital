@model IEnumerable<SecondSightWeb.Areas.Admin.Models.ViewModels.MedicineListViewModel>

@{
    ViewBag.Title = "Index";
}
<script>
    $(document).ready(function () {
        $('#tbl_MedicineList').DataTable();
    });
</script>
<a href="@Url.Action("Create")" class="btn btn-danger"><span><i class="glyphicon glyphicon-plus"></i></span>Add Record</a>
<table class="table table-striped table-bordered" id="tbl_MedicineList">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MedicineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicineTypeShortCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicineTypeName)
            </th>
            <th></th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicineName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicineTypeShortCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicineTypeName)
                </td>
                <td>
                    <a href="@Url.Action("Edit",new { id=item.Id})" class="btn btn-primary btn-xs"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="@Url.Action("Delete",new { id=item.Id})" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }

</table>
