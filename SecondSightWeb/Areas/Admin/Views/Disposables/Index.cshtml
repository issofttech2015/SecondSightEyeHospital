@model IEnumerable<SecondSightWeb.Models.Disposables>

@{
    ViewBag.Title = "Index";
}

<script>
    $(document).ready(function () {
        $('#tbl_Disposables').DataTable();
    });
</script>
<a href="@Url.Action("Create")" class="btn btn-danger"><span><i class="glyphicon glyphicon-plus"></i></span>Add Record</a>
<table class="table table-striped table-bordered" id="tbl_Disposables">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisposableName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th></th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DisposableName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>
                <td>
                    <a href="@Url.Action("Edit",new { id=item.DisposableId})" class="btn btn-primary btn-xs"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="@Url.Action("Delete",new { id=item.DisposableId})" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }

</table>
