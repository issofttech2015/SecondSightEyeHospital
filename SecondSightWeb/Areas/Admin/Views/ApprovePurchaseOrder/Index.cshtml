@model IEnumerable<SecondSightWeb.Areas.Inventory.Models.ViewModel.ItemEntryViewModel>

@{
    ViewBag.Title = "Index";
}

<script>
    $(document).ready(function () {
        $('#tbl_ApprovePurchaseOrder').DataTable();
        $('[data-toggle="confirmation"]').confirmation({
            placement: 'left'
        });
    });
</script>
@*<a href="@Url.Action("Create")" class="btn btn-danger"><span><i class="glyphicon glyphicon-plus"></i></span>Add Record</a>*@
<table class="table table-striped table-bordered" id="tbl_ApprovePurchaseOrder">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PODate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeneratedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeteratedTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PODate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GeneratedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GeteratedTime)
                </td>
                <td>
                    <a href="@Url.Action("ViewPurchaseOrder",new { id=item.POID})" class="btn btn-default btn-xs" data-toggle="confirmation" data-btn-ok-label="Continue"><i class="glyphicon glyphicon-eye-open"></i></a>
                    <a href="@Url.Action("ApprovePurchaseOrder",new { id=item.POID})" class="btn btn-default btn-xs" data-toggle="confirmation" data-btn-ok-label="Continue"><i class="glyphicon glyphicon-ok-circle"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
