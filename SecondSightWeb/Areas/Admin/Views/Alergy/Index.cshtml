@model IEnumerable<SecondSightSouthendEyeCentre.Models.Alergy>

@{
    ViewBag.Title = "Index";
}

<script>
    $(document).ready(function () {
        $('#tbl_Alergy').DataTable();
    });
</script>
<a href="@Url.Action("Create")" class="btn btn-danger"><span><i class="glyphicon glyphicon-plus"></i></span>Add Record</a>
<table class="table table-striped table-bordered" id="tbl_Alergy">
    <thead>
    <tr>
        <th>
            <label>Alergy Name</label>
        </th>
        <th></th>
    </tr>
</thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AlergyName)
                </td>
                <td>
                    <a href="@Url.Action("Edit",new { id=item.Id})" class="btn btn-primary btn-xs" ><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="@Url.Action("Delete",new { id=item.Id})" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
