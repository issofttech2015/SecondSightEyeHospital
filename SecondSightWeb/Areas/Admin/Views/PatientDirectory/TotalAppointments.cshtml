@model IEnumerable<SecondSightWeb.Areas.Admin.Models.ViewModels.TotalAppointmentsViewModel>

@{
    switch (Session["Employee_RoleId"].ToString())
    {
        case "2":
            Layout = "~/Areas/Admin/Views/Shared/_DoctorLayout.cshtml";
            break;
        case "5":
            Layout = "~/Areas/Admin/Views/Shared/_ReceptionLayout.cshtml";
            break;
        case "8":
            Layout = "~/Areas/OtManager/Views/Shared/_Layout.cshtml";
            break;
        case "6":
        case "9":
            Layout = "~/Areas/Admin/Views/Shared/_ExaminerLayout.cshtml";
            break;
    }
}
<style>
    .custom-top {
        margin-top: 60px;
    }
</style>
<script>
    $(document).ready(function () {
        $('#tbl_Ot_PreOvertation_Advice').DataTable();
        $('[data-toggle="confirmation"]').confirmation({
            placement: 'left'
        });
    });
</script>
<table class="table table-striped table-bordered custom-top" id="tbl_Ot_PreOvertation_Advice">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PatCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            </tr>
        }
    </tbody>
</table>
