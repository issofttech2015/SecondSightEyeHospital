@model IEnumerable<SecondSightWeb.Areas.Admin.Models.ViewModels.TotalPrescriptionViewModel>

<script>
    $(document).ready(function () {
        $('#tbl_Ot_PreOvertation_Advice').DataTable();
        $('[data-toggle="confirmation"]').confirmation({
            placement: 'left'
        });
    });
</script>
<table class="table table-striped table-bordered" id="tbl_Ot_PreOvertation_Advice">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PatCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentTime)
            </td>
            <td>
                <a href="@Url.Action("GeneratePrescription",new { id=item.Id})" class="btn btn-default btn-xs" data-toggle="confirmation" data-btn-ok-label="Continue"><i class="glyphicon glyphicon-print"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
