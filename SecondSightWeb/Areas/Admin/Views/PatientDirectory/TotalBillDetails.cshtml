@model IEnumerable<SecondSightWeb.Areas.Admin.Models.ViewModels.TotalBillDetailsViewModel>

<script>
    $(document).ready(function () {
        $('#tbl_Ot_PreOvertation_Advice').DataTable();
        $('[data-toggle="confirmation"]').confirmation({
            placement: 'left'
        });
    });
</script>
<table class="table table-striped table-bordered" id="tbl_Ot_PreOvertation_Advice">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Concession)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaidAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Due)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PatCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Concession)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaidAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Due)
            </td>
            <td>
                <a href="@Url.Action("GenerateBill",new { id=item.Id})" class="btn btn-default btn-xs" data-toggle="confirmation" data-btn-ok-label="Continue"><i class="glyphicon glyphicon-print"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>>
