@model IEnumerable<SecondSightWeb.Areas.Admin.Models.ViewModels.AdjustmentViewModel>

@{
    ViewBag.Title = "Index";
    if (Session["Employee_RoleId"].ToString() == "5")
    {
        Layout= "~/Areas/Admin/Views/Shared/_ReceptionLayout.cshtml";
    }
}

<script>
    $(document).ready(function () {
        $('#tbl_Adjustment thead tr').clone(true).appendTo('#tbl_Adjustment thead');
        $('#tbl_Adjustment thead tr:eq(1) th').each(function (i) {
            var title = $(this).text().trim();
            if (title != "") {
                $(this).html('<input type="text" placeholder="Search" />');
            }

            $('input', this).on('keyup change', function () {
                if (table.column(i).search() !== this.value) {
                    table
                        .column(i)
                        .search(this.value)
                        .draw();
                }
            });
        });

        var table = $('#tbl_Adjustment').DataTable({
            scrollX: true,
            scrollCollapse: true,
            autoWidth: true,
            paging: true,
        });
    });
</script>
