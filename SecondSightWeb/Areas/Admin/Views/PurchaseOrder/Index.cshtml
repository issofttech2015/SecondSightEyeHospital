@model IEnumerable<SecondSightWeb.Areas.Admin.Models.ViewModel.PurchaseOrderViewModel>

<script>
    $(document).ready(function () {
        $('#tbl_Purchase_Order').DataTable();
    });
</script>
<a href="@Url.Action("Create")" class="btn btn-danger"><span><i class="glyphicon glyphicon-plus"></i></span>Add Record</a>
<table class="table table-striped table-bordered" id="tbl_Purchase_Order">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.POID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PODate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreviewAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeneratedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeteratedTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.POID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PODate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PreviewAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GeneratedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GeteratedTime)
                </td>
                <td>
                    <a href="@Url.Action("Details",new { id=item.POID})" class="btn btn-primary btn-xs"><i class="glyphicon glyphicon-list-alt"></i></a>
                    <a href="@Url.Action("Delete",new { id=item.POID})" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>

</table>
